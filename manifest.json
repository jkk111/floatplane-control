{
  "manifest_version": 3,
  "name": "Floatplane Control",
  "description": "Floatplane auto-play and timestamp memory",
  "version": "0.0.2",
  "permissions": ["storage"],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.floatplane.com/post/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
